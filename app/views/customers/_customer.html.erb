<div class="customer-card">
  <div class="customer-header">
    <% if customer.image.attached? %>
      <%= image_tag customer.image, class: "customer-avatar" %>
    <% else %>
      <div class="customer-avatar">
        <i class="fas fa-user"></i>
      </div>
    <% end %>


  </div>

  <div class="customer-details">
    <div>
      <h2 class="customer-name"><%= customer.full_name %></h2>
    </div>

    <% if customer.phone_number.present? %>
      <div class="detail-row">
        <span class="detail-label">Phone:</span>
        <span class="detail-value phone-number"><%= customer.phone_number %></span>
      </div>
    <% end %>

    <% if customer.email_address.present? %>
      <div class="detail-row">
        <span class="detail-label">Email:</span>
        <span class="detail-value email-address"><%= customer.email_address %></span>
      </div>
    <% else %>
      <div class="detail-row">
        <span class="detail-label">Email:</span>
        <span class="detail-value email-missing">Missing</span>
      </div>
    <% end %>
  </div>
</div>